<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="156dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_home_recycler"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView
                    android:id="@+id/tv_hiit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hiit"
                    app:layout_constraintStart_toEndOf="@id/img_1"
                    android:textSize="18sp"
                    android:textColor="@color/text_home_color"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/high_energy"
                    app:layout_constraintStart_toEndOf="@id/img_1"
                    android:textSize="18sp"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_hiit"/>

                <ImageView
                    android:id="@+id/img_icon_kcal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_energy"
                    app:layout_constraintStart_toEndOf="@id/img_1"
                    android:src="@drawable/ic_booked"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    />

                <TextView
                    android:id="@+id/tv_kcal_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_400_kcal"
                    app:layout_constraintStart_toEndOf="@id/img_icon_kcal"
                    app:layout_constraintTop_toBottomOf="@id/tv_energy"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="6dp"/>


                <ImageView
                    android:id="@+id/img_icon_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_energy"
                    app:layout_constraintStart_toEndOf="@id/tv_kcal_recycler"
                    android:src="@drawable/ic_time"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"

                    />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_45_min"
                    app:layout_constraintStart_toEndOf="@id/img_icon_time"
                    app:layout_constraintTop_toBottomOf="@id/tv_energy"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="8dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>